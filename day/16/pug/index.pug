-
	contentName = "Daily UI - 16"
doctype html
html(lang="ja")
	head
		meta(charset='UTF-8')
		meta(name='viewport' content='width=device-width,initial-scale=1,minimum-scale=1')
		meta(name='description' content=contentName)
		meta(http-equiv='X-UA-Compatible' content='ie=edge')
		title #{contentName}
	body
		.container
			header.header
				h1.header__heading Daily UI 16
				nav.header__nav
					.header__nav-line
					.header__nav-line
			.scrollIndicator(data-indicator)
				.scrollIndicator__item-em(data-indicator-item-em)
				-for (let i = 0; i < 7; i++)
					.scrollIndicator__item(data-indicator-item)