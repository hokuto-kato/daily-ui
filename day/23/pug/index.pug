- contentName = "Daily UI - 23"
doctype html
html(lang="ja")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0")
		meta(name="description" content=contentName)
		meta(http-equiv="X-UA-Compatible" content="ie=edge")
		title !{contentName}
	body
		.container
			header.header
				nav.nav
					.nav__toggle(data-nav-toggle)
						.nav__line
						.nav__line
					.nav__list(data-nav-list)
						dl.nav__inner(data-nav-list)
							- for(let i = 1; i <= 6; i++)
								dt.nav__list-title(data-trigger-accordion)
									p.nav__list-title-body リスト項目 0#{i}
									.nav__list-title-toggle(data-toggle-accordion)
										.nav__list-title-toggle-line
										.nav__list-title-toggle-line
								dd.nav__list-data.visually-hidden(data-target-accordion)
									ul.nav__list-data-list
										li.nav__list-data-item
											a.nav__list-data-body(href="#") リスト入れ子 01
										li.nav__list-data-item
											a.nav__list-data-body(href="#") リスト入れ子 02
							dt.nav__list-title
								a.nav__list-title-login(href="#") ログイン
				h1.header__heading Daily UI 23
				a.header__cart(href="#" aria-label="カートを見る")
					svg.header__cart-img
						use(xlink:href="./img/sprite.svg#cart")
			.main
				picture.main__img
					source(srcset=require("~/img/img01.webp") type="image/webp")
					img.main__img-body(src=require("~/img/img01.jpg") alt="子供のイメージ" width="366" height="244")
				h2.main__heading
					| 手間をかけずに
					br
					| Webサイトが作れる
				p.main__body 手間をかけずにWebサイトが作れる
				picture.main__img
					source(srcset=require("~/img/img02.webp") type="image/webp")
					img.main__img-body(src=require("~/img/img02.jpg") alt="自然のイメージ" width="366" height="488")