- contentName = "Daily UI - 29"
doctype html
html(lang="ja")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0")
		meta(name="description" content=contentName)
		meta(http-equiv="X-UA-Compatible" content="ie=edge")
		title !{contentName}
	body
		header.header
			h1.header__title Daily UI 29
		main.main
			picture
				source(srcset=require("~/img/img.webp") type="image/webp")
				img.main__img(src=require("~/img/img.jpg") alt="猫のイメージ" width="314" height="491" data-img)
			input.main__range(type="range" min="0" max="1" step="0.1" value="0" aria-label="画像の透明度を変更するスライダー" data-range)