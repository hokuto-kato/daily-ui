- contentName = "Daily UI - 33"
doctype html
html(lang="ja")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0")
		meta(name="description" content=contentName)
		meta(http-equiv="X-UA-Compatible" content="ie=edge")
		title !{contentName}
	body
		main.main
			h1.main__title
				span.main__title-body Daily UI 33
				span.main__title-em VOICE
			.main__audio(data-target)
			button.main__button(type="button" data-trigger aria-label="rec/stop")
				.main__button-inner