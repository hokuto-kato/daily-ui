-
	contentName = "Daily UI - 09"

doctype html
html(lang="ja")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0")
		meta(name="description" content=contentName)
		meta(http-equiv="X-UA-Compatible" content="ie=edge")
		title !{contentName}
	body
		header.header
			h1.header__heading Daily UI 09
		canvas.wave(width="1280" height="65" data-wave)
		main.main
			.main__content
				dl.login
					dt.login__title
						label.login__title-body(for="mail") メールアドレス
					dd.login__data
						input.login__data-input(id="mail" type="mail")
					dt.login__title
						label.login__title-body(for="password") パスワード
					dd.login__data
						input.login__data-input(id="password" type="password")
				.login__check
					input.login__check-input.visually-hidden(id="loginState" type="checkbox")
					label.login__check-body(for="loginState") ログイン状態を保持する
				button.login__button(type="button") ログイン
