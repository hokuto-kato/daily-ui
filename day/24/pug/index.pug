- contentName = "Daily UI - 24"
doctype html
html(lang="ja")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0")
		meta(name="description" content=contentName)
		meta(http-equiv="X-UA-Compatible" content="ie=edge")
		title !{contentName}
	body
		.container
			header.header
				nav.nav
					.nav__toggle
						.nav__line
						.nav__line
				h1.header__heading Daily UI 24
				a.header__cart(href="#" aria-label="カートを見る")
					svg.header__cart-img
						use(xlink:href="./img/sprite.svg#cart")
			main.main
				.main__img
					picture
						source(srcset=require("~/img/img.webp") type="image/webp")
						img.main__img-body(src=require("~/img/img.jpg") alt="カーディガンのイメージ" width="366" height="549")
				dl.main__color
					dt.main__color-title
						span.main__color-title-select カラーを選択 :
						span.main__color-title-value(data-target-color) ホワイト
					dd.main__color-data
						.main__color-data-item
							input.main__color-input.visually-hidden(type="radio" id="white" name="color" checked aria-label="ホワイト" data-trigger-color)
							label.main__color-label.main__color-label-white(for="white")
						.main__color-data-item
							input.main__color-input.visually-hidden(type="radio" id="black" name="color" aria-label="ブラック" data-trigger-color)
							label.main__color-label.main__color-label-black(for="black")
						.main__color-data-item
							input.main__color-input.visually-hidden(type="radio" id="gray" name="color" aria-label="グレー" data-trigger-color)
							label.main__color-label.main__color-label-gray(for="gray")
				dl.main__size
					dt.main__size-title サイズ表を見る
					dd.main__size-data
						.main__size-data-item
							.main__size-select.main__size-select-measure
								select.main__size-select-body(name="size")
									option サイズを選んでください
									option(value="S") S
									option(value="M") M
									option(value="L") L
									option(value="XL") XL
									option(value="XXL") XXL
							.main__size-select.main__size-select-value
								select.main__size-select-body(name="value")
									- for (let i = 1; i <= 10; i++)
										option(value="") #{i}
				.main__button-wrap
					button.main__button-cart(type="button" data-trigger-cart) カートに入れる
					.main__button-favorite
						button.main__button-favorite-body(type="button" aria-label="お気に入りに入れる")
	.overlay.visually-hidden(data-overlay)
	.cart.visually-hidden(data-target-cart)
		p.cart__body カートに商品を追加しました。
		.cart__close(data-close)
		button.cart__button-cart(type="button") カートを見る
		button.cart__button-purchase(type="button") 購入手続きへ進む



