- contentName = "Daily UI - 02"
doctype html
html(lang="ja")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0")
		meta(name="description" content=contentName)
		meta(http-equiv="X-UA-Compatible" content="ie=edge")
		link(rel="shortcut icon" type="image/x-icon" href="./favicon/favicon.ico")
		title !{contentName}
	body
		section.main
			h1.main__heading Daily UI
			h2.main__heading--sub 02
			.main__carousel(data-carousel)
				.main__carousel-item
					img.main__carousel-image(src=require("~/img/dog01.jpg") alt="犬のイメージ01")
				.main__carousel-item
					img.main__carousel-image(src=require("~/img/dog02.jpg") alt="犬のイメージ02")
				.main__carousel-item
					img.main__carousel-image(src=require("~/img/dog03.jpg") alt="犬のイメージ03")
